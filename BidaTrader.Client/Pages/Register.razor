@page "/register"

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light py-4">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="row g-0">
            
            @* --- ẢNH BÊN TRÁI --- *@
            <div class="col-md-5 d-none d-md-flex flex-column align-items-center justify-content-center bg-success bg-opacity-10 p-4">
                <img src="img/logo.png" class="img-fluid mb-3 rounded-4 shadow-sm" style="max-width: 80%;" />
                <h4 class="fw-bold text-success mt-3">Tham gia cùng chúng tôi</h4>
                <p class="text-muted text-center px-3">Tạo tài khoản để trải nghiệm dịch vụ tốt nhất từ BidaTrader.</p>
            </div>

            @* --- FORM BÊN PHẢI --- *@
            <div class="col-md-7 bg-white p-5">
                <div class="d-flex align-items-center justify-content-center d-md-none mb-3">
                    <img src="img/logo.png" class="img-fluid me-2" width="40" />
                    <h3 class="fw-bold m-0">Đăng Ký</h3>
                </div>
                <h3 class="fw-bold mb-4 d-none d-md-block">Đăng ký tài khoản</h3>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle me-1"></i> @errorMessage
                    </div>
                }

                <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                    <DataAnnotationsValidator />
                    
                    @* FullName (Nếu RegisterDto chưa có, bạn cần thêm vào DTO hoặc bỏ qua trường này) *@
                    @* <div class="mb-3">
                        <label class="form-label fw-bold small">Họ và tên</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-vcard"></i></span>
                            <InputText class="form-control" @bind-Value="registerModel.FullName" placeholder="Nhập họ và tên" />
                        </div>
                    </div> *@

                    @* Username *@
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Tên đăng nhập</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <InputText class="form-control" @bind-Value="registerModel.UserName" placeholder="Chọn tên đăng nhập" />
                        </div>
                        <ValidationMessage For="@(() => registerModel.UserName)" class="text-danger small" />
                    </div>

                    @* Password *@
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <InputText type="@passType" class="form-control" @bind-Value="registerModel.Password" placeholder="Nhập mật khẩu" />
                            <button type="button" class="btn btn-outline-secondary" @onclick="TogglePass">
                                <i class="bi @(showPass ? "bi-eye" : "bi-eye-slash")"></i>
                            </button>
                        </div>
                        <ValidationMessage For="@(() => registerModel.Password)" class="text-danger small" />
                    </div>

                    @* Confirm Password *@
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Xác nhận mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield-check"></i></span>
                            <InputText type="@confirmPassType" class="form-control" @bind-Value="registerModel.ConfirmPassword" placeholder="Nhập lại mật khẩu" />
                            <button type="button" class="btn btn-outline-secondary" @onclick="ToggleConfirmPass">
                                <i class="bi @(showConfirmPass ? "bi-eye" : "bi-eye-slash")"></i>
                            </button>
                        </div>
                        <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="text-danger small" />
                    </div>

                    @* Submit *@
                    <div class="d-grid mt-4 mb-3">
                        <button type="submit" class="btn btn-success py-2 fw-bold" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span> <span>Đang xử lý...</span>
                            }
                            else
                            {
                                <span>Đăng Ký</span>
                            }
                        </button>
                    </div>

                    <div class="text-center">
                        <span class="text-muted small">Đã có tài khoản? </span>
                        <a href="login" class="text-success fw-bold text-decoration-none">Đăng nhập</a>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterDto registerModel = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    // Logic ẩn/hiện password
    private bool showPass = false;
    private string passType => showPass ? "text" : "password";
    private void TogglePass() => showPass = !showPass;

    private bool showConfirmPass = false;
    private string confirmPassType => showConfirmPass ? "text" : "password";
    private void ToggleConfirmPass() => showConfirmPass = !showConfirmPass;

    private async Task HandleRegister()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.Register(registerModel);
            if (result.IsSuccess)
            {
                // Đăng ký thành công -> Chuyển sang login
                Navigation.NavigateTo("/login");
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Đăng ký thất bại.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Lỗi hệ thống: " + ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }
}